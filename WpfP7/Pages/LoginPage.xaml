<Page x:Class="WpfP7.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LoginPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Width="300" HorizontalAlignment="Center">
            <TextBlock Text="Вход в систему" FontSize="20" HorizontalAlignment="Center" Margin="10"/>

            <Label Content="ID доктора"/>
            <TextBox x:Name="DoctorIdTextBox" Margin="5"/>

            <Label Content="Пароль"/>
            <PasswordBox x:Name="PasswordBox" Margin="5"/>

            <Button Content="Войти" Click="LoginButton_Click" Margin="5" Padding="10,5"/>
            <Button Content="Регистрация" Click="RegisterButton_Click" Margin="5" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Page>