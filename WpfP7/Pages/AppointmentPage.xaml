<Page x:Class="WpfP7.Pages.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AppointmentPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Row="0" Grid.ColumnSpan="2" Header="Информация о пациенте" Margin="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding CurrentPatient.LastName}" Margin="5"/>
                <TextBlock Text="{Binding CurrentPatient.Name}" Margin="5"/>
                <TextBlock Text="{Binding CurrentPatient.MiddleName}" Margin="5"/>
                <TextBlock Text="-" Margin="5"/>
                <TextBlock Text="Телефон:" Margin="5"/>
                <TextBlock Text="{Binding CurrentPatient.PhoneNumber}" Margin="5"/>
                <TextBlock Text="Дата рождения:" Margin="5"/>
                <TextBlock Text="{Binding CurrentPatient.Birthday}" Margin="5"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="1" Grid.Column="0" Header="Новый прием" Margin="5">
            <StackPanel>
                <Label Content="Дата приема (дд.мм.гггг)"/>
                <TextBox Margin="5" Text="{Binding NewAppointment.Date, Mode=TwoWay}"/>

                <Label Content="Диагноз"/>
                <TextBox Margin="5" Text="{Binding NewAppointment.Diagnosis, Mode=TwoWay}" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                <Label Content="Рекомендации"/>
                <TextBox Margin="5" Text="{Binding NewAppointment.Recommendations, Mode=TwoWay}" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

                <Button Content="Сохранить прием" Click="SaveAppointment_Click" Margin="5" Padding="10,5" Background="LightGreen"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="1" Grid.Column="1" Header="История приемов" Margin="5">
            <ListView ItemsSource="{Binding CurrentPatient.AppointmentStories}" Margin="5">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" BorderThickness="1" Margin="2" Padding="5">
                            <StackPanel>
                                <TextBlock Text="{Binding Date}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Diagnosis}"/>
                                <TextBlock Text="{Binding Recommendations}" FontSize="10" Foreground="Gray"/>
                                <TextBlock Text="{Binding FullName}" FontSize="10" Foreground="Gray"/>
                                <TextBlock Text="{Binding DoctorId}" FontSize="10" Foreground="Gray"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </GroupBox>
        
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Изменить информацию о пациенте" Click="EditPatient_Click" Margin="5" Padding="10,5"/>
            <Button Content="Назад" Click="BackButton_Click" Margin="5" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Page>