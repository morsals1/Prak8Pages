<Page x:Class="WpfP7.Pages.PatientFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PatientFormPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding PageTitle}" FontSize="20" HorizontalAlignment="Center" Margin="10"/>

        <StackPanel Grid.Row="1" Width="400">
            <Label Content="Имя"/>
            <TextBox Margin="5" Text="{Binding CurrentPatient.Name, Mode=TwoWay}"/>

            <Label Content="Фамилия"/>
            <TextBox Margin="5" Text="{Binding CurrentPatient.LastName, Mode=TwoWay}"/>

            <Label Content="Отчество"/>
            <TextBox Margin="5" Text="{Binding CurrentPatient.MiddleName, Mode=TwoWay}"/>

            <Label Content="Дата рождения (дд.мм.гггг)"/>
            <TextBox Margin="5" Text="{Binding CurrentPatient.Birthday, Mode=TwoWay}"/>

            <Label Content="Контактный телефон"/>
            <TextBox Margin="5" Text="{Binding CurrentPatient.PhoneNumber, Mode=TwoWay}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="5" Padding="10,5"/>
            <Button Content="Назад" Click="BackButton_Click" Margin="5" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Page>