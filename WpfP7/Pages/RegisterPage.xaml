<Page x:Class="WpfP7.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RegisterPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Width="400" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Регистрация доктора" FontSize="20" HorizontalAlignment="Center" Margin="10"/>

            <Label Content="Имя"/>
            <TextBox x:Name="NameTextBox" Margin="5" Text="{Binding CurrentDoctor.Name, Mode=TwoWay}"/>

            <Label Content="Фамилия"/>
            <TextBox x:Name="LastNameTextBox" Margin="5" Text="{Binding CurrentDoctor.LastName, Mode=TwoWay}"/>

            <Label Content="Отчество"/>
            <TextBox x:Name="MiddleNameTextBox" Margin="5" Text="{Binding CurrentDoctor.MiddleName, Mode=TwoWay}"/>

            <Label Content="Специализация"/>
            <TextBox x:Name="SpecTextBox" Margin="5" Text="{Binding CurrentDoctor.Specification, Mode=TwoWay}"/>

            <Label Content="Пароль"/>
            <PasswordBox x:Name="PasswordBox" Margin="5"/>

            <Label Content="Подтверждение пароля"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Зарегистрировать" Click="RegisterButton_Click" Margin="5" Padding="10,5"/>
                <Button Content="Назад" Click="BackButton_Click" Margin="5" Padding="10,5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>