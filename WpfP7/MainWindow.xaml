<Window x:Class="WpfP7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfP7"
        mc:Ignorable="d"
        Title="Система приема пациентов" Height="770" Width="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="0"/>

        <StatusBar Grid.Row="1" Background="LightGray">
            <StatusBarItem>
                <TextBlock Text="Докторов:"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding DoctorsCount}" Margin="5,0,0,0"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="Пациентов:"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding PatientsCount}" Margin="5,0,0,0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>